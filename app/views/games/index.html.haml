-# アイキャッチ
.eye-catch
  .eye-catch__shadow
    .eye-catch__text Let's sharing football review !

.main
  -# 試合一覧
  .main__wrapper
    .main__wrapper__title Game List
    .main__contents
      - @games.each do |game|
        = link_to "/games/#{game.id}" do
          .main__content
            .main__content__shadow
              .main__content__home-image
                = image_tag "#{game.home_team_img}"
              .main__content__team-names
                = "#{game.home_team_name} VS #{game.away_team_name}"
                %br/
                = "#{game.home_team_score} - #{game.away_team_score}"
                %br/
                = game.date
              .main__content__away-image
                = image_tag "#{game.away_team_img}"
    = paginate(@games)

  -# ニュース一覧
  .side__wrapper
    .side__wrapper__title News List
    .side__contents
      - @articles.each do |article|
        = link_to "#{article.url}", target:"blank" do
          .side__content
            = image_tag "#{article.image}", class:"side__content__image"
            = article.title

-# フッター呼び出し
= render 'shared/footer'