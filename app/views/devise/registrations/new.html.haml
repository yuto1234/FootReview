.sign-content
  %h6 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :name
      %em
      %br/
      = f.text_field :name, autofocus: true, required: "required"
    .field
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password", required: "required"
    .field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", required: "required"
    .field
      = f.label :avatar
      %br/
      = f.file_field :avatar, class:"avatar_field"
      %br/
      = f.submit "Sign up", class:"waves-effect waves-light btn indigo darken-4 button"
